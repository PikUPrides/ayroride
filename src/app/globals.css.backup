/* ========================================= */
/* GLOBAL DESKTOP LAYOUT (Restoring "Before" State) */
/* ========================================= */

#mtr-form-fields {
  display: flex !important;
  flex-direction: row !important;
  flex-wrap: wrap !important;
  width: 100% !important;
  gap: 16px !important;
}

/* Default to Full Width for all fields */
html body #mtr-form #mtr-form-fields .mtr-form-field,
html body #mtr-form #mtr-form-fields #mtr-form-field-name,
html body #mtr-form #mtr-form-fields #mtr-form-field-email,
html body #mtr-form #mtr-form-fields #mtr-form-field-phone {
  width: 100% !important;
  display: block !important;
  margin: 0 !important;
  flex: none !important;
}

/* Side-by-Side for Zip and Rider on Desktop */
html body #mtr-form #mtr-form-fields #mtr-form-field-extra,
html body #mtr-form #mtr-form-fields #mtr-form-option-field {
  width: calc(50% - 8px) !important;
  display: block !important;
  margin: 0 !important;
  flex: none !important;
}

