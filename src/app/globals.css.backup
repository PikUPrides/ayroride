/* MOBILE OVERRIDES                          */
/* ========================================= */

/* 1. Reset Form Container (Mobile Only) */
/* 1. Reset Form Container */
/* 1. Reset Form Container (Mobile Only) */
@media (max-width: 768px) {
  #mtr-form {
    padding: 0 !important;
    margin: 0 !important;
    border: none !important;
    background: transparent !important;
    box-shadow: none !important;
    width: 100% !important;
    max-width: 100% !important;
  }
}

/* Specific Mobile Padding Override */
@media (max-width: 768px) {

  html body form#mtr-form.mtr-new-ui-v2.mtr-light-theme,
  html body #mtr-form,
  html body .rh-form,
  html body [data-rh-widget] {
    padding: 0 !important;
    margin: 0 !important;
    width: 100% !important;
    border: none !important;
  }
}

#mtr-optin-form {
  height: auto !important;
  min-height: auto !important;
}

/* 2. Reset Rows and Fields Container */
/* 2. Reset Rows and Fields Container */
/* 2. Reset Rows and Fields Container */
/* 2. Reset Rows and Fields Container (Mobile Only) */
@media (max-width: 768px) {

  #mtr-form .mtr-row,
  .mtr-row {
    margin: 0 !important;
    padding: 0 !important;
    width: 100% !important;
  }

  #maitre-optin-form-fields {
    display: block !important;
    padding: 0 !important;
    width: 100% !important;
  }

  #mtr-form-fields {
    display: flex !important;
    flex-direction: column !important;
    width: 100% !important;
    gap: 8px !important;
    /* Reduced gap for mobile */
  }
}

/* 3. Field Wrappers (Mobile Overrides) */
@media (max-width: 768px) {

  html body #mtr-form #mtr-form-fields .mtr-form-field,
  html body #mtr-form #mtr-form-fields #mtr-form-field-name,
  html body #mtr-form #mtr-form-fields #mtr-form-field-email,
  html body #mtr-form #mtr-form-fields #mtr-form-field-extra,
  html body #mtr-form #mtr-form-fields #mtr-form-option-field {
    display: block !important;
    width: 100% !important;
    max-width: 100% !important;
    flex: none !important;
    padding: 0 !important;
    margin: 0 0 8px 0 !important;
    position: relative !important;
    float: none !important;
    clear: both !important;
  }

  html body #mtr-form #mtr-form-fields #mtr-form-field-extra,
  html body #mtr-form #mtr-form-fields #mtr-form-option-field {
    width: 100% !important;
    display: block !important;
    margin-right: 0 !important;
    margin-left: 0 !important;
  }

  .mtr-form-field[style],
  div[id^="mtr-form-field"][style] {
    display: block !important;
    justify-content: unset !important;
    width: 100% !important;
  }
}

/* 4. Hide Default Labels & Unwanted Elements */
#mtr-form label,
.mtr-text-field,
#mtr-optin-verification-container,
.show-hide-class {
  display: none !important;
}

/* 5. Input Styling - Ayro Design System */
#mtr-form input,
#mtr-form select,
#mtr-form input[type="text"],
#mtr-form input[type="email"],
#mtr-form input[type="tel"] {
  width: 100% !important;
  max-width: 100% !important;
  min-width: 0 !important;
  height: 48px !important;
  padding: 0 16px !important;
  padding-right: 40px !important;
  font-family: inherit !important;
  font-size: 14px !important;
  border-radius: 12px !important;
  background-color: #F4F4F9 !important;
  border: 1px solid transparent !important;
  color: #5C5C5C !important;
  box-sizing: border-box !important;
  margin: 0 !important;
  outline: none !important;
  display: block !important;
}

/* Ensure wrappers don't constrain width */
.mtr-form-field>div,
.mtr-form-field input {
  width: 100% !important;
  display: block !important;
}

#mtr-form input:focus,
#mtr-form select:focus {
  border-color: #423DF9 !important;
  background-color: #ffffff !important;
}

#mtr-form input::placeholder {
  color: #9CA3AF !important;
  opacity: 1 !important;
}

/* 6. Phone Row Specifics */

/* Hide Country Code Global */
html body #mtr-form #mtr-form-fields #mtr-form-field-country {
  display: none !important;
}

/* Make Phone Field Full Width Global */
html body #mtr-form #mtr-form-fields #mtr-form-field-phone {
  width: 100% !important;
  flex: none !important;
  margin: 0 0 16px 0 !important;
  display: block !important;
}

/* Mobile Overrides for Phone Spacing */
@media (max-width: 768px) {
  html body #mtr-form #mtr-form-fields #mtr-form-field-phone {
    margin: 0 0 8px 0 !important;
  }
}

/* 7. Icon Positioning */
.mtr-form-field svg,
.mtr-form-icon {
  position: absolute !important;
  right: 16px !important;
  top: 50% !important;
  transform: translateY(-50%) !important;
  pointer-events: none !important;
  z-index: 10 !important;
  color: #9CA3AF !important;
  width: 20px !important;
  height: 20px !important;
  display: block !important;
}

/* 8. Submit Button */
#mtr-form-submit-button {
  background-color: #423DF9 !important;
  color: #FFFFFF !important;
  height: 48px !important;
  border: none !important;
  border-radius: 12px !important;
  font-weight: 700 !important;
  font-size: 16px !important;
  width: 100% !important;
  margin-top: 8px !important;
  cursor: pointer !important;
  transition: background-color 0.2s ease !important;
}

#mtr-form-submit-button:hover {
  background-color: #3530d4 !important;
}

/* 9. Status Message */
#mtr-form-status-container {
  margin-top: 10px !important;
  text-align: center !important;
  font-size: 14px !important;
}